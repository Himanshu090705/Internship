<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Whatsapp</title>
        <link rel="stylesheet" href="style.css" />
    </head>
    <body>
        <h3>All chats!</h3>
        <form method="get" action="/chats/new">
            <button>New chat</button>
        </form>
        <br />
        <div class="chatbox">
            <% for(let chat of chats) {%>
            <div class="chat">
                <p>From: <i><%= chat.from %></i></p>
                <div class="msg">
                    <p><%= chat.msg %></p>
                </div>
                <br />
                <form action="/chats/<%= chat._id %>/edit" method="get">
                    <button>Edit</button>
                </form>
                <form
                    action="/chats/<%= chat._id %>?_method=delete"
                    method="post"
                >
                    <button>Delete</button>
                </form>
                <p>Recevied By <i><%= chat.to %></i></p>
                <hr />
                Time : <%= chat.created_at.toString().split(" ")[4] %> Date :
                <%= chat.created_at.toString().split(" ").slice(0,4).join(" ")
                %>
            </div>
            <% } %>
        </div>
    </body>
</html>
